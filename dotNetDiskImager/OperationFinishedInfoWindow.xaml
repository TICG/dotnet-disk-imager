<Window x:Class="dotNetDiskImager.OperationFinishedInfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNetDiskImager"
        mc:Ignorable="d"
        Title="More Information - dotNet Disk Imager" Height="250" Width="400" Icon="icon.ico" ShowInTaskbar="False" MinWidth="200" MinHeight="200" WindowStartupLocation="CenterOwner">
    <Grid Background="{DynamicResource WindowPlaceholderColor}">
        <RichTextBox x:Name="moreInfoTextBox" Background="{DynamicResource Background}" Foreground="{DynamicResource Foreground}" IsReadOnly="True" Margin="10" ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <FlowDocument x:Name="document" PageWidth="Auto">
                <Paragraph x:Name="paragraph"></Paragraph>
            </FlowDocument>
        </RichTextBox>
    </Grid>
</Window>
