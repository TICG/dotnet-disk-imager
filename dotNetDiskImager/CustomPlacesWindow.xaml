<Window x:Class="dotNetDiskImager.CustomPlacesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:dotNetDiskImager"
        mc:Ignorable="d"
        Title="Custom Places - dotNet Disk Imager" Height="200" Width="300" ResizeMode="NoResize" Icon="icon.ico">
    <Grid>
        <Border BorderBrush="#FFBBBBBB" BorderThickness="1" Margin="10,40,10,10">
            <ScrollViewer>
                <ListBox x:Name="customPlacesListBox" BorderBrush="{x:Null}"/>
            </ScrollViewer>
        </Border>
        <Button x:Name="addButton" Content="{StaticResource addIcon}" HorizontalAlignment="Left" Padding="4" Margin="12,8,0,0" VerticalAlignment="Top"/>
        <Button x:Name="editButton" Content="{StaticResource editIcon}" HorizontalAlignment="Left" Padding="4" Margin="39,8,0,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
